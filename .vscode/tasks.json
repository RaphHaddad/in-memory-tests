{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test",
            "command": "dotnet test ./SayHello/SayHello.Tests/",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "command": "dotnet build SayHello/",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}